@{
    @model List<Pizza>
}
<div class="d-flex justify-content-center">
    <h1> Bella pizzeria </h1>
</div>

<div class="d-flex justify-content-center gap-2">
    @foreach (Pizza pizza in Model)
    {
        <div class="d-flex justify-content-center">
            <div class="card">
                <img src="@pizza.Image" class="card-img-top" alt="Immagine pizza">
                <div class="card-body">

                    <h5 class="card-title">@pizza.Name</h5>

                    <p class="card-text">@pizza.Description</p>
                    <h5>&euro; @pizza.Price</h5>
                    <a href="@Url.Action("Details", "Pizza", new {id = pizza.Id})">Mostra Dettagli</a>
                </div>
            </div>
        </div>
    }
</div>



